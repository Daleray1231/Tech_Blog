<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>
<br/>
<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New blog:</h3>
  <br/>
    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-name">Blog Post:</label>
        <input class="form-input" type="text" id="blog-name" name="blog-name" />
      </div>
      <div class="form-group">
        <label for="blog-desc">description:</label>
        <textarea class="form-input" id="blog-desc" name="blog-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if blogs.length}}
  <div class="col-md-6 blog-list">
    <h3>Current blogs:</h3>
    <br/>
    {{#each blogs as |blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blog/{{blog.id}}">{{blog.name}}</a></h4>
      </div>
      <br/>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger blog-delete" data-id="{{blog.id}}">DELETE</button>
        <a href='/edit/{{blog.id}}'>UPDATE</a>

      </div>
    </div>
    <br/>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/js/dashboard.js"></script>